{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-5">

        <a href="{{ path('blog_list') }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
            <i class="fas fa-arrow-left"></i>
        </a>

        <div class="text-2xl py-8">
            <b>{{ post.title }}</b>
            <div class="text-sm">
                {{ post.createdAt|date('Y-m-d') }}
            </div>
        </div>

        <div class="w-2/3">
            {% for content in contents %}
                <div class="py-2">
                    {{ content.text|nl2br }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
