{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('blog') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('blog') }}
{% endblock %}

{% block body %}
    <div class="p-5">
        <div class="text-3xl pb-10 text-center">
            <b>{{ post.title }}</b>
            <div class="text-sm">
                {{ post.createdAt|date('Y-m-d') }}
            </div>
        </div>

        <a href="{{ path('blog_list') }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
            <i class="fas fa-arrow-left"></i>
        </a>

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a id="deletePost" href="{{ path('blog_delete_post', {post: post.id}) }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
                <i class="fas fa-trash"></i>
            </a>
            <a href="{{ path('post_create_content', {post: post.id}) }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
                <i class="fas fa-plus"></i>
            </a>
            <a href="{{ path('update_blog_post', {post: post.id}) }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
                <i class="fas fa-pencil-alt"></i>
            </a>
            {% if post.visible == 1 %}
                <a href="{{ path('post_toggle_visibility', {postId: post.id, visibility: 0}) }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
                    <i class="fas fa-eye-slash"></i>
                </a>
            {% else %}
                <a href="{{ path('post_toggle_visibility', {postId: post.id, visibility: 1}) }}" class="text-3xl mt-6 text-gray-500 hover:text-white">
                    <i class="fas fa-eye"></i>
                </a>
            {% endif %}
        {% endif %}

        <div class="w-full lg:w-2/3 m-auto">
            {% for content in contents %}
                <div class="py-2">
                    {% if content.title is not empty %}
                        <div id="{{ content.title }}" class="text-2xl font-bold mb-1">
                            <a href="#{{ content.title }}">#</a>
                            {{ content.title }}
                        </div>
                    {% endif %}
                    {{ content.text|raw }}

                    {% if content.image != null %}
                        <div class="mt-3">
                            <img src="data:image/png;base64,{{ content.image }}">
                        </div>
                    {% endif %}
                    <span class="float-right">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <a href="{{ path('post_update_content', {postId: post.id, contentId: content.id}) }}" title="Edit Content"
                               class="text-base text-gray-500 hover:text-red-500">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        {% endif %}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <a href="{{ path('post_delete_content', {postId: post.id, contentId: content.id}) }}" title="Delete Content"
                               class="text-base text-gray-500 hover:text-red-500 deleteContent">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        {% endif %}
                    </span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
