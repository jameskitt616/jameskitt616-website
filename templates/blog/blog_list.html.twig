{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('blog') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('blog') }}
{% endblock %}

{% block body %}
    <div class="p-5">
        <div class="text-3xl pb-10 text-center">
            <b>jameskitt616's Blog</b>
        </div>

        <div class="ml-12 mt-14">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="mb-4">
                    <a href="{{ path('create_blog_post') }}" class="p-2 my-3 rounded bg-gray-600 hover:bg-gray-700">
                        Create Post
                    </a>
                </div>
            {% endif %}

            <div class="text-xl">
                {% for post in posts %}
                    <a href="{{ path('blog_post', {id: post.id}) }}">
                        <div class="mb-3 bg-gray-600 hover:bg-gray-700 p-1 rounded w-full lg:w-2/3 cursor-pointer">
                            {{ post.title }} <span class="text-xs">{{ post.createdAt|date('Y-m-d') }}</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
